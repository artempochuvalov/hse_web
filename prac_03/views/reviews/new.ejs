<% layout("layouts/boilerplate") %>
<div class="row mb-3">
    <h1 class="text-center">
        Новый отзыв
    </h1>
    <div class="col-md-6 offset-md-3">
        <form action="/review" method="POST" novalidate class="validate-form">
            <div class="mb-3">
                <fieldset class="starability-basic">
                    <legend>Оценка:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1"
                        checked aria-label="Нет оценки." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label class="form-label" for="firstName">Имя</label>
                <input class="form-control" type="text" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="lastName">Фамилия</label>
                <input class="form-control" type="text" id="lastName" name="lastName" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Отзыв</label>
                <textarea class="form-control" name="body" id="body" required></textarea>
            </div>
            <button class="btn btn-success">Отправить отзыв</button>
        </form>
    </div>
</div>